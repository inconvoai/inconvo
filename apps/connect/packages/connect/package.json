{
  "name": "@ten-dev/inconvo",
  "version": "0.0.35",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "sync": "npx sync-schema",
    "test:ecommerce": "jest",
    "dev": "tsup --watch"
  },
  "bin": {
    "sync-schema": "dist/sync.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ten-dev/inconvo-js.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    "./express": {
      "require": "./dist/express/index.js",
      "import": "./dist/express/index.js"
    },
    "./next": {
      "require": "./dist/next/index.js",
      "import": "./dist/next/index.js"
    }
  },
  "files": [
    "dist",
    "drizzle"
  ],
  "author": "",
  "license": "UNLICENSED",
  "peerDependencies": {
    "express": "^4.21.1"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.12.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "mysql2": "^3.14.0",
    "next": "^15.2.4",
    "postgres": "^3.4.5",
    "typescript": "^5.8.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3"
  },
  "tsup": {
    "entry": [
      "src/express/index.ts",
      "src/next/index.ts",
      "src/server/index.ts"
    ],
    "minify": true,
    "bundle": true,
    "splitting": false,
    "clean": true,
    "dts": true,
    "css": true,
    "outDir": "dist",
    "onSuccess": "cp src/sync.js dist/sync.js"
  }
}
