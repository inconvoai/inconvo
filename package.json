{
  "name": "inconvo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:all": "turbo watch dev",
    "dev": "turbo watch dev --filter=platform... --filter=dev-server... --filter=connect-server... --filter=sandbox...",
    "dev:local": "turbo watch dev --filter=dev-server...",
    "dev:run": "turbo run dev --filter=platform... --filter=dev-server... --filter=connect-server... --filter=sandbox...",
    "dev:local:run": "turbo run dev --filter=dev-server...",
    "dev:connect": "turbo run dev --filter=connect-server...",
    "lint": "turbo run lint --ui=stream",
    "lint:platform": "turbo run lint --filter=platform --ui=stream",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cf-typegen": "turbo run cf-typegen",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules .turbo apps/*/.turbo packages/*/.turbo",
    "clean:ts-cache": "rm -f apps/*/tsconfig.tsbuildinfo apps/*/.next/cache/.tsbuildinfo"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "engines": {
    "node": ">=18"
  }
}
