{
  "name": "@inconvoai-internal/inconvo",
  "version": "0.1.0",
  "description": "CLI for Inconvo development environment",
  "repository": {
    "type": "git",
    "url": "https://github.com/inconvoai/inconvo.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "inconvo": "./bin/inconvo.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "bin",
    "docker-compose.yml",
    "demo-db-init.sql"
  ],
  "scripts": {
    "build": "tsc",
    "dev:local": "tsx src/index.ts dev",
    "lint": "eslint --color .",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "node scripts/resolve-catalog.js && pnpm build",
    "postpublish": "git checkout package.json"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@faker-js/faker": "^9.0.0",
    "commander": "^14.0.2",
    "kysely": "catalog:",
    "mysql2": "^3.16.2",
    "pg": "catalog:",
    "yaml": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "eslint": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
